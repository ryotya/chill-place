.button {
  width: 100%;
  height: 50px;
  background-color: #ffffff;
  border: 2px solid #000000;
  border-bottom: 5px solid #000000;
  font-size: 1.2em;
  color: #000000;
  letter-spacing: 1px;
  transition: 1s;
}

.button_shape:hover {
  border-radius: 20px;
}
