<div class="grid grid-cols-3 text-center mt-16">
  <div class="col-start-2">
    <div class="container_buttons my-8">
      <button class="button button_shape"><%= link_to 'New Post', new_post_path %></button>
    </div>
      <div class="">
        <% @posts.each do |post| %>
          <div class="border rounded-sm mb-8">
            <h4><%= post.title %></h4>
            <p><%= post.content %></p>
            <div class="grid grid-cols-3">
              <p><%= link_to '詳しく見る', post %></p>
              <p><%= link_to '編集', edit_post_path(post) %></p>
              <p><%= link_to '削除', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>
